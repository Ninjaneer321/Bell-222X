<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>mainrotor.ac</path>

  <animation>
    <object-name>axe0</object-name>
    <object-name>axe1</object-name>
    <object-name>axe2</object-name>
    <object-name>axe3</object-name>
    <object-name>axe4</object-name>
    <object-name>axe5</object-name>
  </animation>

  <!-- Blades -->
  <model>
    <name>Blade1</name>
    <path>Aircraft/Bell-222X/Models/MainRotor/blade1.xml</path>
    <offsets>
      <x-m> 0.000 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.381 </z-m>
      <roll-deg>     0 </roll-deg>
      <pitch-deg>    0 </pitch-deg>
      <heading-deg>  0 </heading-deg>
    </offsets>
  </model>

  <model>
    <name>Blade2</name>
    <path>Aircraft/Bell-222X/Models/MainRotor/blade2.xml</path>
    <offsets>
      <x-m> 0.000 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.381 </z-m>
      <roll-deg>      0 </roll-deg>
      <pitch-deg>     0 </pitch-deg>
      <heading-deg> 180 </heading-deg>
    </offsets>
  </model>

  <animation>
    <name>rotorcomplet</name>
    <object-name>axe0</object-name>
    <object-name>axe1</object-name>
    <object-name>axe2</object-name>
    <object-name>axe3</object-name>
    <object-name>axe4</object-name>
    <object-name>axe5</object-name>
    <object-name>Blade1</object-name>
    <object-name>Blade2</object-name>
  </animation>

  <!-- Rotation du rotor -->
  <animation>
    <type>rotate</type>
    <object-name>rotorcomplet</object-name>
    <property>rotors/main/blade[0]/position-deg</property>
    <factor> 1 </factor>
    <center>
       <x-m> 0 </x-m>
       <y-m> 0 </y-m>
       <z-m> 0 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z>  1 </z>
    </axis>
  </animation>

</PropertyList>

